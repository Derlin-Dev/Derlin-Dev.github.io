  },

  "endpoints": [
    {
      "method": "POST",
      "route": "/auth/signup",
      "description": "Registrar nuevo usuario",
      "response": {
        "status": 201,
        "message": "Usuario registrado correctamente"
      }
    },
    {
      "method": "POST",
      "route": "/auth/login",
      "description": "Autenticación de usuario y generación de token JWT",
      "response": {
        "status": 200,
        "token": "jwt-token"
      }
    },
    {
      "method": "GET",
      "route": "/post/get",
      "description": "Obtener lista de publicaciones",
      "response": {
        "status": 200,
        "data": [
          {
            "id": "1",
            "titulo": "Introducción a Spring Boot",
            "tag": "SpringBoot"
          }
        ]
      }
    },
    {
      "method": "POST",
      "route": "/post/new",
      "description": "Crear nueva publicación",
      "response": {
        "status": 201,
        "message": "Publicación creada exitosamente"
      }
    },
    {
      "method": "GET",
      "route": "/comment/post/{id}",
      "description": "Obtener comentarios por publicación",
      "response": {
        "status": 200,
        "comments": [
          {
            "id": "1",
            "comment": "Excelente post",
            "userId": "4"
          }
        ]
      }
    },
    {
      "method": "POST",
      "route": "/comment/user/new",
      "description": "Agregar comentario a publicación",
      "response": {
        "status": 201,
        "message": "Comentario creado correctamente"
      }
    },
    {
      "method": "POST",
      "route": "/answers/new",
      "description": "Responder a un comentario",
      "response": {
        "status": 201,
        "message": "Respuesta agregada correctamente"
      }
    },
    {
      "method": "GET",
      "route": "/actuator/health",
      "description": "Health check del servicio",
      "response": {
        "status": 200,
        "service": "microservices-blog-api",
        "statusService": "UP"
      }
    }
  ],

  "githubUrl": "https://github.com/Derlin-Dev/api-microservices-blogs.v2.git",
